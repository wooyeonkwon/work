cmake_minimum_required(VERSION 3.10)
project(muonCor)

# Find ROOT package
find_package(ROOT REQUIRED COMPONENTS RIO Tree RDataFrame)
include(${ROOT_USE_FILE})

# Find CMSSW packages (assuming this is built within CMSSW environment)
include_directories($ENV{CMSSW_BASE}/src)
include_directories($ENV{CMSSW_RELEASE_BASE}/src)

# Add executable
add_executable(muonCor muonCor.cc)
target_link_libraries(muonCor ${ROOT_LIBRARIES})